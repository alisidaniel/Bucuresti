<%- include('layouts/userheader.ejs') %>
    <div class="container">
        <div class="row">
           <div class="col-lg-7 offset-2 text-center">
               <form class="form" method="POST" action="/profile">
                 <h4 class="mb-4">Welcome to your account <span><%= data.username %> </span></h4>
                  <p>Email: <b class="text-success"> <%= data.email %></p>
                   <div class="form-group">
                       <input type="text" name="username" placeholder="Username" class="form-control" value="<%= data.username %>">
                   </div>
                   <div class="form-group">
                       <input type="text" name="phone" placeholder="Phone" class="form-control" value="<%= data.phone %>">
                   </div>

                   <div class="form-group">
                       <input type="text" name="address" placeholder="Address" class="form-control" value="<%= data.address %>">
                   </div>
                    <div class="form-group">
                       <!-- <label>profile</label> -->
                       <input type="file" name="photo" id="profile">
                   </div>
                    <div class="form-group">
                       <button class="btn site-btn">Save</button>
                   </div>
               </form>
           </div>
        </div>
    </div>
<%- include ('layouts/userfooter.ejs') %>

</body>

</html>